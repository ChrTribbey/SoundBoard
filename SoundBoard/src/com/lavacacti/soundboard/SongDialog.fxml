<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox onKeyPressed="#onKeyPress" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lavacacti.soundboard.SongDialogController">
   <children>
      <Label text="Drop file here or enter path." />
      <TextField fx:id="songPath" onDragDropped="#onDragDropped" onDragOver="#onDragOver" text="Empty" />
      <Label text="Name" />
      <TextField fx:id="songName" text="Empty" />
      <Label fx:id="bindLabel" text="Current bind: none" />
      <Button maxWidth="350.0" minWidth="350.0" mnemonicParsing="false" onAction="#onBindListen" prefHeight="25.0" prefWidth="350.0" text="Bind Key" />
      <Button mnemonicParsing="false" onAction="#save" prefWidth="350.0" text="Save" />
   </children>
</VBox>
